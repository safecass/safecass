// CASROS configuration for Component JR3
{
    "component": "JR3",
    "event": [
        // Device access error (due to error with device driver or hardware itself)
        {   "name"            : "EVT_JR3_DEVICE_ACCESS_ERROR",
            "severity"        : 20,
            "state_transition": [ "N2E", "W2E" ]
        },
        {   "name"            : "/EVT_JR3_DEVICE_ACCESS_ERROR",
            "severity"        : 20,
            "state_transition": [ "E2N", "W2N" ]
        },
        // Non-zero error count (error_count).  See JR3.cpp for details.
        {
            "name"            : "EVT_JR3_ERROR_COUNT",
            "severity"        : 15,
            "state_transition": [ "N2E", "W2E" ]
        },
        {   "name"            : "/EVT_JR3_ERROR_COUNT",
            "severity"        : 15,
            "state_transition": [ "E2N", "W2N" ]
        },
        // Non-zero warning bit(s) (WARNING_BITS).  See JR3.cpp for details.
        {   "name"            : "EVT_JR3_WARNING",
            "severity"        : 10,
            "state_transition": [ "N2W" ]
        },
        {   "name"            : "/EVT_JR3_WARNING",
            "severity"        : 10,
            "state_transition": [ "W2N" ]
        },
        // Non-zero error bit(s) (ERROR_BITS).  See JR3.cpp for details.
        {   "name"            : "EVT_JR3_ERROR",
            "severity"        : 20,
            "state_transition": [ "N2E", "W2E" ]
        },
        {   "name"            : "/EVT_JR3_ERROR",
            "severity"        : 20,
            "state_transition": [ "E2N", "W2N" ]
        }
    ],
    "filter" : [
        {   // common fields
            "class_name"       : "FilterOnOff",
            "target"           : {
                // type of state machine associated with this filter
                // s_F: framework state
                // s_A: application state
                // s_P: provided interface state
                // s_R: required interface state
                "type"         : "s_A",
                "component"    : "JR3"
            },
            "type"             : "ACTIVE",
            //"debug"            : true,     // false (by default or omitted)
            // fields specific to on/off state filter
            "argument" : {
                "input_signal" : "Warning",
                "event_on"     : "EVT_JR3_WARNING",
                "event_off"    : "/EVT_JR3_WARNING"
            }
        },
        {
            "class_name"       : "FilterOnOff",
            "target"           : {
                "type"         : "s_A",
                "component"    : "JR3"
            },
            "type"             : "ACTIVE",
            "argument" : {
                "input_signal" : "ErrorCount",
                "event_on"     : "EVT_JR3_ERROR_COUNT",
                "event_off"    : "/EVT_JR3_ERROR_COUNT"
            }
        },
        {   "class_name"       : "FilterOnOff",
            "target"           : {
                "type"         : "s_A",
                "component"    : "JR3"
            },
            "type"             : "ACTIVE",
            "argument" : {
                "input_signal" : "Error",
                "event_on"     : "EVT_JR3_ERROR",
                "event_off"    : "/EVT_JR3_ERROR"
            }
        }
    ],
    // There should be exactly the same number of service specifications as that of 
    // application provided interfaces.
    "service" : [
        {   // provided interface name
            "name"    : "JR3Interface",
            // dependency information
            "dependency" : {
                "s_R" : [ ],
                "s_A" : true,
                "s_F" : true
            }
        }
    ]
}
