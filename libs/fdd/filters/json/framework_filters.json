// This JSON file defines a set of framework filters that get installed to 
// each component in the system.  Currently, two filters defined are the
// exception filter and the overrun filter.  Since this file does not know
// the name of a target component, the "target_component" field has to be
// updated accordingly.
{
    "filter" : [
        //-------------------------------------------------
        // Exception filter
        //
        {   // common fields
            "class_name"       : "FilterChangeDetection",
            "category"         : "FEATURE",
            "target_component" : "will_be_overwritten_by_casros_when_deployed",
            "type"             : "ACTIVE",
            // This filter is the last filter of the filter pipeline.
            "last_filter"      : true,
            // exception filter specific fields
            "Arguments" : {
                "InputSignalName" : "ExceptionCount"
            }
        },
        //-------------------------------------------------
        // Overrun filter
        //
        {   // common fields
            "class_name"       : "FilterChangeDetection",
            "category"         : "FEATURE",
            "target_component" : "will_be_overwritten_by_casros_when_deployed",
            "type"             : "ACTIVE",
            // This filter is the last filter of the filter pipeline.
            "last_filter"      : true,
            // exception filter specific fields
            "Arguments" : {
                "InputSignalName" : "OverrunCount"
            }
        }
    ]
}
